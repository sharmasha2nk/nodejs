doctype html
html
    head
        title= "Real time tic tac toe"
        script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
        script(src='/game.js')
        script(src='/socket.io/socket.io.js')
    body
        div#container(style='width: 325px; height: 100%;')
            table(border="1" cellspacing="8" cellpadding="40" style='width: 100%;')
                tbody
                    - for (var i = 0; i < 3; ++i) {
                        tr
                            - for (var j = 0; j < 3; ++j) {
                                td(id=(i * 3 + j)) 
                                    div(style='overflow: hidden; height: 15px; width: 15px;')
                            - }
                    - }
            br
            br
            div#message-box(style='width: 100%; height: 20px; margin: 0 0 20px 0; border: solid 1px #999; overflow-y: scroll;')